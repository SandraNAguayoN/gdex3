{{> navbar nombre = sesion.nombre idRol = sesion.cveRol cveUsuario = sesion.cveUsuario }}

<section style="padding:50px;">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#listaUsuarios').DataTable();
        });
    </script>

    <h3>Administración de Usuarios</h3>
    <hr>
    <br>

                    {{#if flash}}
                    <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        <strong>{{flash}}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if}}

        <br>

    <table id="listaUsuarios" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th><b>ID</b></th>
                <th><b>Nombre</b></th>
                <th><b>Correo electrónico</b></th>
                <th><b>Fecha ingreso</b></th>
                <th><b>Rol</b></th>
                <th><b>Acción</b></th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <td>{{cveUsuario}}</td>
                <td>{{nombreCompleto}}</td>
                <td>{{email}}</td>
                <td>{{fechaIngreso}}</td>
                <td>{{rol}}</td>
                <td>
                    <div align="left">
                        <ul style="display:block;">
                            <!--Editar usuario-->
                             <a class="btn btn-warning" href="/inicio/editarUsuario/{{cveUsuario}}"
                                style="text-decoration: none;">
                                <i class="icon-edit" style="font-size: 20px; color: #fff;"></i>
                            </a>
                            <!--Editar usuario-->
                            
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <!--Eliminar usuario-->
                            <a class="btn btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este usuario?');" href="/inicio/eliminarUsuario/{{cveUsuario}}"
                                style="text-decoration: none;">
                                <i class="icon-trash" style="font-size: 20px; color: #fff;"></i>              
                            </a>
                            <!--Eliminar usuario-->
                        </ul>
                    </div>
                </td>

            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th><b>ID</b></th>
                <th><b>Nombre</b></th>
                <th><b>Correo electrónico</b></th>
                <th><b>Fecha ingreso</b></th>
                <th><b>Rol</b></th>
                <th><b>Acción</b></th>
            </tr>
        </tfoot>
    </table>

</section>

{{> footer }}