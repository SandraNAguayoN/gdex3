{{> navbar nombre = sesion.nombre idRol = sesion.cveRol cveUsuario = sesion.cveUsuario }}
<section style="padding:50px;">

  <h4>Contraseña</h4>
  <hr>
  <div align="center">
    <div class="card border-primary mb-3" style="max-width: 800px;">
      <div class="card-header">
        <h4><i class="icon-lock" style="font-size: 35px; color: rgb(51, 99, 161);"></i>
          &nbsp;Cambiar contraseña</h4>
      </div>
      <div class="card-body text-primary">
        <form action="/usuario/modificarPassword" method="POST">
          {{#if success}}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>{{success}}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {{/if}}
          {{#if error}}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>{{error}}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {{/if}}


          <div class="form-row">
          {{#if cveUsuario}}
            <input type="number" id="cveUsuario" name="cveUsuario" placeholder="cveUsuario" value='{{cveUsuario}}' required="true"
              hidden>
          {{/if}}
            <div class="col-md-6 mb-2">
              <label for="name">Introducir contraseña actual</label>
              <input class="form-control" type="password" id="password" name="password" placeholder="Contraseña actual"
                required>
            </div>
            <div class="col-md-6 mb-2">
              <label for="name">Confirmar contraseña actual</label>
              <input class="form-control" type="password" id="confirmpassword" name="confirmpassword" placeholder="Contraseña actual"
                required>
            </div>
            <div class="col-md-6 mb-2">
              <label for="name">Introducir nueva contraseña</label>
              <input class="form-control" type="password" id="newpassword" name="newpassword"
                placeholder="Nueva contraseña" required>
            </div>
            <div class="col-md-6 mb-2">
              <label for="name">Confirmar nueva contraseña</label>
              <input class="form-control" type="password" id="confirmnewpassword" name="confirmnewpassword"
                placeholder="Confirma nueva contraseña" required>
            </div>
          </div>

          <br>
          <div align="center">
            <button type="submit" class="btn btn-outline-success"><i class="icon-pencil"
                style="font-size: 20px; color:#000;"></i>
              &nbsp;Cambiar</button>
          </div>
        </form>

      </div>
    </div>
  </div>

</section>

{{> footer }}
{{> scripts}}